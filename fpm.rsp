@pretiffy
option clean --all
system fprettify .\src\ -r --case 1 1 1 1 -i 4 --strict-indent --enable-replacements --strip-comments --c-relations

@clean
option clean --all

@rebuild
system rmdir /s /q build
option build

@build
option build

@test
options test --flag '-D_QUIET' 

@doc
option clean --all
system cd ./.dox & doxygen ./Doxyfile.in & cd ..